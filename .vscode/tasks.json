{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-B",
                "build",
                "-S",
                "."
            ],
            "group": "build"
        },
        {
            "label": "Build Main",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "sh_renderer_main",
                "--parallel",
                "12"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake Configure"
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "sh_renderer_test",
                "--parallel",
                "12"
            ],
            "group": "build",
            "dependsOn": "CMake Configure"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "group": "build"
        }
    ]
}